<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
				android:background="@color/appdarkblue"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.wowwee.snappets.MainMenuActivity$PlaceholderFragment">

	<RelativeLayout
			android:id="@+id/scannerViewTopBar"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="16dp"
			android:layout_marginLeft="16dp"
			style="@style/scanner_top_bar">

		<Button
				android:id="@+id/buttonSettings"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"
				android:text="@string/action_settings"
				android:minHeight="32dp"
				android:minWidth="32dp"
				style="@style/scanner_top_bar_button"/>
		<Button
				android:id="@+id/buttonRefresh"
				android:layout_alignParentTop="true"
				android:text="@string/refresh"
				android:minHeight="32dp"
				android:minWidth="32dp"
				android:layout_toLeftOf="@id/buttonSettings"
				style="@style/scanner_top_bar_button"/>

	</RelativeLayout>

	<ListView
			android:id="@+id/listViewRobotScanner"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/scannerViewTopBar"
			android:layout_centerVertical="true"
			android:layout_marginRight="16dp"
			android:layout_marginLeft="16dp"
			style="@style/scanner_robot_list">

	</ListView>

</RelativeLayout>
